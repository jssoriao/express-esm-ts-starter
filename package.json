{
  "name": "express-esm-tsx",
  "version": "0.1.0",
  "description": "ExpressJS ESM TSX Starter Template",
  "type": "module",
  "scripts": {
    "start": "node --loader esm-module-alias/loader --experimental-specifier-resolution=node ./dist -e production",
    "build": "node --experimental-specifier-resolution=node ./build.js",
    "dev": "tsx ./src",
    "test": "mocha"
  },
  "aliases": {
    "@": "./dist"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.3",
    "chai": "^v5.0.0-alpha.0",
    "fs-extra": "^11.1.1",
    "mocha": "^10.2.0",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "esm-module-alias": "^2.0.3",
    "express": "^4.18.2",
    "ts-command-line-args": "^2.5.0"
  }
}